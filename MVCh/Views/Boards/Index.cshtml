@model IEnumerable<Board>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Разделы</h2>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Доска</th>
            <th>Код</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <div>
                        <a asp-controller="Boards" asp-action="OpenBoard" asp-route-id="@item.Id" >@item.Name</a>
                    </div>
                </td>
                <td>@item.Code</td>
            </tr>
        }
    </tbody>
</table>
</div>

